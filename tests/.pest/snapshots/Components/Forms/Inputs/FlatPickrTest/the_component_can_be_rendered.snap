<div wire:ignore>
    <input
        x-data="{
            picker: null,
        }"
        x-init="$nextTick(() => { 
            if (picker) return;
                
            picker = flatpickr($root, {&quot;dateFormat&quot;:&quot;Y-m-d H:i&quot;,&quot;altInput&quot;:true,&quot;enableTime&quot;:true});
        })"
        name="birthday"
        type="text"
        id="birthday"
        placeholder="Y-m-d H:i"
                
    />
</div>
